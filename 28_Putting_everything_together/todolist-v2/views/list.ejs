<!-- @format -->
<%- include('header') -%>

<div class="box" id="heading">
    <h1><%= listTitle %></h1>
</div>

<div class="box">
    <% nextItems.forEach(nextItem => { %>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%=nextItem._id%>" onchange="this.form.submit()" />
            <p><%= nextItem.name %></p>
        </div>
    </form>
    <% }) %>
    <form class="item" action="/" method="post">
        <input
            type="text"
            placeholder="New Item"
            name="nextItem"
            autocomplete="off"
        />
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>
</div>
<%- include('footer') -%>
