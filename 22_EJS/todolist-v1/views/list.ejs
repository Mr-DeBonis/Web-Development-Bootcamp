<!-- @format -->
<%- include('header') -%>

<div class="box" id="heading">
    <h1><%= listTitle %>!</h1>
</div>

<div class="box">
    <% nextItems.forEach(nextItem => { %>
    <div class="item">
        <input type="checkbox" />
        <p><%= nextItem %></p>
    </div>
    <% }) %>
    <form action="/" method="post">
        <input
            type="text"
            placeholder="New Item"
            name="nextItem"
            autocomplete="off"
        />
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>
</div>
<%- include('footer') -%>
